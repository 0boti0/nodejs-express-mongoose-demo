body 
  background-color #f9f9f9
  font-family "HelveticaNeue", "Helvetica Neue", "HelveticaNeueRoman", "HelveticaNeue-Roman", "Helvetica Neue Roman", 'TeXGyreHerosRegular', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif
  font-size 14px
  color #444
  
a img 
  border none
  
a, a:hover 
  color #369
  text-decoration none

a:hover 
  text-decoration underline

.clear 
  clear both
  height 0
  overflow hidden

#container 
  width 75%
  margin 0 auto
  background-color #FFF
  padding 20px 40px
  border solid 1px #eee
  margin-top 20px

#user_nav
  float right
  font-size 14px

#flash_notice, #flash_error 
  padding 15px
  margin 10px 0

#flash_notice 
  background-color #FEEFB3
  border 1px solid #ffe26f
  color #9F6000

#flash_error 
  background-color #f9e5e0
  border 1px solid #ffd0c4
  color #A30000

.fieldWithErrors 
  display inline

#errorExplanation 
  width 400px
  border 2px solid #CF0000
  padding 0px
  padding-bottom 12px
  margin-bottom 20px
  background-color #f0f0f0

#errorExplanation h2 
  text-align left
  font-weight bold
  padding 5px 5px 5px 15px
  font-size 12px
  margin 0
  background-color #c00
  color #fff

#errorExplanation p 
  color #333
  margin-bottom 0
  padding 8px

#errorExplanation ul 
  margin 2px 24px

#errorExplanation ul li 
  font-size 12px
  list-style disc

#logo 
  float left

#logo h1 a 
  color #333
  text-decoration none

input[type=text], input[type=password], textarea 
  border 0
  border 1px solid #ccc
  padding 5px
  font-family "HelveticaNeue", "Helvetica Neue", "HelveticaNeueRoman", "HelveticaNeue-Roman", "Helvetica Neue Roman", 'TeXGyreHerosRegular', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif
  font-size 14px
  color #444

input[type=text]:focus, input[type=password]:focus, textarea:focus 
  border 1px solid #aaa
 
* 
  outline none

.user-form 
  float left

.omniauth-connect 
  float left
  margin-left 200px

.clear, #clear 
  clear both

.twitter-follow-button 
  width 140px !important

.follow-me 
  padding 0 0px 0px 0
  position absolute
  margin-left 850px
  margin-top 50px

#status_message 
  width 400px

td 
  vertical-align top
  
.article
  padding 15px
  border-bottom 1px solid #e0e0e0
  &.last
    border-bottom 0
  
.article_body
  padding 5px 0
  
.article_title
  font-size 16px
  font-weight bold
  
#article_date
  color #aaa
  font-size 12px
  
textarea, input[type=text]
  width 300px

textarea
  height 200px
  
.let-me-know
  color #999
  font-size 13px
  
#no-results
  padding 30px
  text-align center
